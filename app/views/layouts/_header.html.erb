<div class="container">
	<div class="row">
		<div class="col-md-2">
			<%= image_tag  'logo.jpg', :size  => '100x100' %>
		</div>
		<div class="col-md-10 col-md-offset-10">
			<div class="menu">
				<div class="title">MENU</div>
				<ul class="nav">
					<% unless user_signed_in? %>
					<li><%= link_to "トップ", root_path %></li>
					<li><%= link_to "アバウト", about_path %></li>
					<li><%= link_to "新規登録", new_user_registration_path %></li>
					<li><%= link_to "ログイン", new_user_session_path %></li>
					<% else %>
					<li><%= link_to "トップ", root_path %></li>
					<li><%= link_to "アバウト", about_path %></li>
					<li><%= link_to "タイムライン", posts_path %></li>
					<li><%= link_to "今日の一本", today_show_path %></li>
					<li><%= link_to "マイページ", user_path(current_user) %></li>
					<li><%= link_to "ログアウト", destroy_user_session_path %></li>
					<% end %>
				</ul>
</div>
			<%if user_signed_in? %>
			<div class="center-block">
				<%= form_tag(search_path, method: :get) do %>
				　　<%= select_tag 'range' ,options_for_select([['---選択してください---', ''], ['日本酒名', '1'], ['酒蔵名', '2'],['ユーザー', '3']]) %>
				　　<%= select_tag 'search', options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
				　　<%= text_field_tag (:word) %>
				　　<%= submit_tag "検索" %>
				<% end %>
			</div>
			<%end%>
		</div>
	</div>
</div>