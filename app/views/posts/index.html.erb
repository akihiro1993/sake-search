<div class="container">
	<div class="row">
		<h1>投稿一覧</h1>
		<%= flash[:notice] %>
		<p><%= link_to "投稿する", new_post_path %></p>
	</div>
	<div class="row">
		<% @posts.each do |post| %>
		<table class="sake-index">
			<tbody>
				<tr>
					<th>投稿者: <%= attachment_image_tag @user, :profile_img_id, fallback: "no_img.png", size: "30x30" %><%= post.user.nickname %></th>
				</tr>
				<tr>
					<th>日本酒名:<%= link_to post.sake_name, post_path(post.id) %></th>
				</tr>
				<tr>
					<td>
						<%= link_to(post_path(post.id)) do %>
						<%= attachment_image_tag post, :sake_img,  size: "300x300" %>
						<% end %>
					</td>
				</tr>
				<tr>
					<td>日本酒度:<%= post.sake_degree %></td>
					<!-- いいね機能 -->
					<td><%= render 'likes/like', post: post %></td>
				</tr>
				<tr>
					<td><%= post.sake_text %></td>
				</tr>
			</tbody>
		</table>
		<% end %>
	</div>
	<div class="pagination">
	<%= paginate @posts, theme: "twitter-bootstrap-4" %>
    </div>
</div>