<!-- user/showで使用 -->
<% posts.each do |post| %>
<table class="sake-index-user_show">
	<tbody>
		<tr style="width: 30px;">
			<th>
				投稿者:
				<%= attachment_image_tag post.user, :profile_img, fallback: "no_img.png", size: "30x30", style: "margin: 0 auto;" %>
				<%= post.user.nickname %>
			</th>
		</tr>
		<tr>
			<th>日本酒名:<%= link_to post.sake_name, post_path(post.id) %></th>
		</tr>
		<tr>
			<td>
				<%= link_to post_path(post.id) do %>
				<%= attachment_image_tag post, :sake_img,  size: "200x200" %>
				<% end %>
			</td>

		</tr>
		<tr>
			<td>日本酒度:
				<%if post.sake_degree.nil? %>
				不明
				<% else %>
				<%= post.sake_degree %>
				<% end %>
				</td>
			<td><%= render 'likes/like', post: post %></td>
		</tr>
		<tr>
			<td style="width: 200px;"><%= post.sake_text %></td>
		</tr>
	</tbody>
</table>
<% end %>