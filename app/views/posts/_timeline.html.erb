<% posts.each do |post| %>
		<table class="sake-index">
			<tbody>
				<tr>
					<th>投稿者: 
						<%= link_to(user_path(post.user),"data-turbolinks": false) do %>
						<%= attachment_image_tag post.user, :profile_img, fallback: "no_img.png", size: "30x30" %><%= post.user.nickname %>
						<% end %>
					</th>
				</tr>
				<tr>
					<th>日本酒名:<%= link_to post.sake_name, post_path(post.id) %></th>
				</tr>
				<tr>
					<td>
						<%= link_to(post_path(post.id)) do %>
						<%= attachment_image_tag post, :sake_img,  size: "300x300" %>
						<% end %>
					</td>
				</tr>
				<tr>
						<td>タグ:<% post.tags.each do |tag| %>
							<%= tag.tag_name %>,
							<% end %>
						</td>
					</tr>
				<tr>
					<td>日本酒度:<%= post.sake_degree %></td>
					<!-- いいね機能 -->
					<td><%= render 'likes/like', post: post %></td>
				</tr>
				<tr>
					<td class="img_width"><%= post.sake_text %></td>
				</tr>
			</tbody>
		</table>
		<% end %>