<div class="container">
	<div class="row">
		<h4><%= link_to "タイムラインに戻る", posts_path %></h4>
		<h1>投稿詳細</h1>
	</div>
	<div class="row">
		<div class="mx-auto">
			<table>
				<tbody>
					<tr>
						<th>投稿者:<%= @post.user.nickname %></th>
					</tr>
					<tr>
						<th>日本酒名:<%= @post.sake_name %></th>
					</tr>
					<tr>
						<td><%= attachment_image_tag @post, :sake_img,  size: "300x300" %></td>
					</tr>
					<tr>
						<td>日本酒度:<%= @post.sake_degree %></td>
						<td><div id="ajax_favorite"><%= render 'likes/like', post: @post %></td></div>
					</tr>
					<tr><td>
						<pre>酒蔵:<%= link_to @post.sake_brewery.brewery_name, sake_brewery_path(@post.sake_brewery.id) %>   所在地:<%= @post.sake_brewery.brewery_prefecture %></pre>
					</td></tr>
					<tr><td><%= @post.sake_text %></td></tr>
				</tbody>
			</table>
		</div>
		<div class="mx-auto">
			<h3>コメント一覧</h3>
			<% @comments.each do |comment| %>
			<table class="table">
				<tbody>
					<tr>
						<td><%= comment.user.nickname %></td>      <td><%= comment.comment %></td>
						<td><%=link_to "削除", post_comment_path(comment.post_id, comment), method: :delete %></td>
					</tr>
				</tbody>
			</table>
			<% end %>
			<!-- コメント入力欄 -->
			<%= form_for [@post, @comment] do |f| %>
			<%= f.text_area :comment, placeholder: "コメント入力" %>
			<%= f.submit "送信する" %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3 offset-md-5">
			<%= link_to "削除", post_path(@post), method: :delete %>
		</div>
	</div>
</div>
